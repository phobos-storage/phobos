#
# Integration test for ping feature
#

test_dir=$(dirname $(readlink -e $0))
. $test_dir/test_env.sh
. $test_dir/setup_db.sh
. $test_dir/test_launch_daemon.sh

function setup
{
    setup_tables # necessary for the daemon's initialization
}

function cleanup
{
    waive_lrs
    if [[ -w /dev/changer ]]; then
        waive_tlc
        waive_tlc_bis
    fi

    drop_tables
}

function test_ping_phobosd
{
    invoke_lrs
    $valg_phobos phobosd ping || error "Phobosd ping should be successful"
    waive_lrs
    $valg_phobos phobosd ping && error "Phobosd ping should fail"

    return 0
}

function test_ping_tlc
{
    # No TLC
    $valg_phobos tlc ping && error "TLC ping should fail"
    $valg_phobos tlc ping --library library_bis && \
        error "TLC library_bis ping should fail"

    # Only TLC legacy
    invoke_tlc
    $valg_phobos tlc ping || error "TLC ping should be successful"
    $valg_phobos tlc ping --library library_bis && \
        error "TLC library_bis ping should fail"
    waive_tlc

    # Only TLC library_bis
    invoke_tlc_bis
    $valg_phobos tlc ping && error "TLC ping should fail"
    $valg_phobos tlc ping --library library_bis || \
        error "TLC library_bis ping should be successful"

    # TLC legacy and library_bis
    invoke_tlc
    $valg_phobos tlc ping || error "TLC ping should be successful"
    $valg_phobos tlc ping --library library_bis || \
        error "TLC library_bis ping should be successful"
    waive_tlc
    waive_tlc_bis

    return 0
}

TEST_SETUP=setup
TESTS=(test_ping_phobosd)
if [[ -w /dev/changer ]]; then
    TESTS+=(test_ping_tlc)
fi

TEST_CLEANUP=cleanup
